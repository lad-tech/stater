{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
